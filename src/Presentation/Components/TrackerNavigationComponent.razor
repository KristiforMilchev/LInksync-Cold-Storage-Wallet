@using LInksync_Cold_Storage_Wallet.Services.Implementation
@namespace SYNCWallet.Components.Navigation


<style>

    .page{
        overflow-x:hidden ;
    }
    
    .select2-container--default .select2-selection--single {
        border-radius: 4px;
        width: 300px;
        margin: auto;
        font-size: 22px;
        color: red;
        background: none;
        border: none;
        padding: ;
        padding: 28px;
        display: flex;
        align-content: center;
        justify-content: center;
        align-items: center;
    }
    
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #689aa4;
        font-size: 33px;


    }
    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 26px;
        position: absolute;
        top: 1px;
        right: 1px;
        width: 20px;
        display: none;
    }
    
    .CardFluent{
        padding: 0;
        margin: 0;
    }
        
    .PromotedAssetContainer {
        width: 100%;
        display: grid;
        align-items: stretch;
        grid-template-columns: repeat(12, minmax(300px, 1fr));
        grid-column-gap: 30px;
        grid-row-gap: 60px;
        width: 60%;
        overflow: hidden;
        margin: auto;
    }
    
    .Promoteditem{
        width: 100%;
        display: flex;
        position: relative;
          animation: slide 10s infinite linear;

    }
       .Promoteditem > span{
          width: 100%;
          display: flex;
          justify-content: center;
        }
    .PLogoSize{
        width: 24px;
        height: 24px;
    }
    
    .TokenTimeline{
        margin: 0;
        padding: 0;
        background: white;
    }
    
  
@@-webkit-keyframes slide{
    0%,100% {
        margin-left:0%;
    }
    
    12% {
        margin-left:0%;
    }
    
    24% {
        margin-left:-100%;
    }
    
    36% {
        margin-left:-100%;
    }
    
    48% {
        margin-left:-200%;
    }
    
    60% {
        margin-left:-200%;
    }
    
    72% {
        margin-left:-300%;
    }
    
    84% {
        margin-left:-300%;  
    }
}
@@-moz-keyframes slide{
  0%,100% {
        margin-left:0%;
    }
    
    12% {
        margin-left:0%;
    }
    
    24% {
        margin-left:-100%;
    }
    
    36% {
        margin-left:-100%;
    }
    
    48% {
        margin-left:-200%;
    }
    
    60% {
        margin-left:-200%;
    }
    
    72% {
        margin-left:-300%;
    }
    
    84% {
        margin-left:-300%;  
    }
}
@@keyframes slide{
  0%,100% {
        margin-left:0%;
    }
    
    12% {
        margin-left:0%;
    }
    
    24% {
        margin-left:-100%;
    }
    
    36% {
        margin-left:-100%;
    }
    
    48% {
        margin-left:-200%;
    }
    
    60% {
        margin-left:-200%;
    }
    
    72% {
        margin-left:-300%;
    }
    
    84% {
        margin-left:-300%;  
    }
}

.TokenLogo{
    width: auto;
    height: 75px;
    
}
</style>

<div class="row">
    <div class="col-lg-12" >
        <div class="card CardFluent">
            <div class="card-header TokenTimeline">
                <div class="PromotedAssetContainer">
                    <div class="Promoteditem">
                        <img src="https://linksync.tech/assets/PNG/Letermark_Color.png" class="PLogoSize"/>
                        <span>Token</span>
                        <span>Price</span>
                    </div>
                    <div class="Promoteditem">
                        <img src="https://linksync.tech/assets/PNG/Letermark_Color.png" class="PLogoSize"/>
                        <span>Token</span>
                        <span>Price</span>
                    </div>
                    <div class="Promoteditem">
                        <img src="https://linksync.tech/assets/PNG/Letermark_Color.png" class="PLogoSize"/>
                        <span>Token</span>
                        <span>Price</span>
                    </div>
                    <div class="Promoteditem">
                        <img src="https://linksync.tech/assets/PNG/Letermark_Color.png" class="PLogoSize"/>
                        <span>Token</span>
                        <span>Price</span>
                    </div>
                    <div class="Promoteditem">
                        <img src="https://linksync.tech/assets/PNG/Letermark_Color.png" class="PLogoSize"/>
                        <span>Token</span>
                        <span>Price</span>
                    </div>
                    <div class="Promoteditem">
                        <img src="https://linksync.tech/assets/PNG/Letermark_Color.png" class="PLogoSize"/>
                        <span>Token</span>
                        <span>Price</span>
                    </div>
                    <div class="Promoteditem">
                        <img src="https://linksync.tech/assets/PNG/Letermark_Color.png" class="PLogoSize"/>
                        <span>Token</span>
                        <span>Price</span>
                    </div>
                    
                </div>
            </div>
            <div class="card-body">
                <div class="row" style="display: flex;justify-content: center;">
                    <img class="TokenLogo" src="@CurrentToken.Logo"/>
                </div>
                <div class="row">
                    <select class="select2 form-control custom-select" style="width: 100%; height:36px;">
                        <option>@CurrentToken.Name</option>
                        
                          @foreach (var ntGroup in @ListedTokens)
                          {
                              if (ntGroup != null)
                              {
                                  <optgroup label="@ntGroup.Network.Name">
                                      @if (ntGroup.Tokens != null)
                                      {
                                          @foreach (var token in ntGroup.Tokens)
                                          {
                                              <option value="@token.Name" @onclick="() => TokenSelected(token)">
                                                  <div>
                                                      <span>
                                                          @token.Name (@token.Symbol)
                                                      </span>
                                                  </div>
                                              </option>
                                          }
                                      }
                                  </optgroup>
                              }
                          
                              
                          }
                   
                        
                    </select>
                </div>

            </div>
        </div>
    </div>
</div>