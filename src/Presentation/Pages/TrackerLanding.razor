
@page "/Tracker"
@using SYNCWallet.Models
@using SYNCWallet.Components.Navigation
@using SYNCWallet.Components.Transactions
@using SYNCWallet.Components.PriceChanges
@using SYNCWallet.Components.PriceChart
@using SYNCWallet.Components.Advertisement

<link href="/css/Tracker.css" rel="stylesheet">
 
<div  >
    <TrackerNavigationComponent CurrentToken="Communication.SelectedToken" AssetChanged="AssetUpdatedHandler">
        
        
    </TrackerNavigationComponent>
</div>
<div class="container ">
    <div class="row">
        <div class="col-lg-12">
            <PriceChartComponent ContractAddress="@Communication.SelectedContract.ContractAddress"></PriceChartComponent>
        </div>
    </div>
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                    <div class="card-img-overlay">
                    </div>
                    <div class="card-footer bg-white">
                        <div class="row">
                            <div class="col-12">
                                <div class="row text-center" style="display: flex;justify-content: center;">
                                    <div class="col-6 col-md-2 border-end">
                                        <div class="mb-2">Market Capital</div>
                                         <i class="fas fa-piggy-bank fs-6 mb-2"></i>
                                        <div>
                                            @Communication.SelectedContract.MarketCap.ToString("C2")
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-2 border-end">
                                        <div class="mb-2">Liquidity</div>
                                        <i class="fas fa-wine-glass fs-6 mb-2"></i>
                                        <div>
                                            @PairPoolSupply.ToString("F1") @Communication.SelectedContract.PairName
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-2 border-end">
                                        <div class="mb-2">Holders</div>
                                        <i class="fas fa-people-carry fs-6 mb-2"></i>
                                        <div>
                                            Estimated 5000 holders
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-2 border-end">
                                        <div class="mb-2">Network</div>
                                        <i class="fas fa-wifi fs-6 mb-2"></i>
                                        <div>
                                            @Communication.ActiveNetwork.Name
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-2 ">
                                        <div class="mb-2">Price</div>
                                        <i class="fas fa-dollar-sign fs-6 mb-2"></i>
                                        <div>
                                            @Utilities.TruncateDecimals(@Communication.SelectedContract.CurrentPrice) 
                                        </div>
                                    </div>
            
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row" style="padding: 12px;">
                  <div class="col-lg-4">
                        <div class="row">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Total Supply</h4>
                                    <div class="text-end">
                                        <h2 class="fw-light mb-0"><i class="ti-arrow-up text-success"></i> @Communication.SelectedContract.Supply</h2>
                                        <span class="text-muted">Self reported</span>
                                    </div>
                                    <span class="text-info">100%</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="min-height: 399px;">
                            <div class="card" style="padding: 0;">
                                <div class="card-body" style="height: 390px; overflow: hidden; overflow-y: auto;">
                                    <div class="d-md-flex align-items-center">
                                        <div>
                                            <h4 class="card-title">Hot Links</h4>
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table stylish-table no-wrap v-middle">
                
                                            <tbody>
                                            @if (Communication.SelectedToken.Links != null)
                                            {
                                                @foreach (var link in Communication.SelectedToken.Links)
                                                {
                                                    switch (link.Type)
                                                    {
                                                        case LinkTypes.Website:
                                                            <tr @onclick="() => Utilities.OpenBrowser(link.Url)">
                                                                <td>

                                                                    <span class="round rounded-circle text-white d-inline-block text-center bg-info">
                                                                        <i class="fas fa-at"></i>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <h6 class="font-weight-medium mb-0 nowrap">
                                                                        <a href="javascript:void(0)" class="link">
                                                                            @link.Url
                                                                        </a>
                                                                    </h6>
                                                                </td>
                                                            </tr>
                                                            break;
                                                        case LinkTypes.Twitter:
                                                            <tr @onclick="() => Utilities.OpenBrowser(link.Url)">
                                                                <td>
                                                                    <span class="round rounded-circle text-white d-inline-block text-center bg-info">
                                                                        <i class="fab fa-twitter"></i>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <h6 class="font-weight-medium mb-0 nowrap">
                                                                        <a href="javascript:void(0)" class="link">
                                                                            @link.Name
                                                                        </a>
                                                                    </h6>
                                                                    <small class="text-muted no-wrap">@link.Url</small>
                                                                </td>

                                                            </tr>
                                                            break;
                                                        case LinkTypes.Facebook:
                                                            <tr @onclick="() => Utilities.OpenBrowser(link.Url)">
                                                                <td>
                                                                    <span class="round rounded-circle text-white d-inline-block text-center bg-info">
                                                                        <i class="fab fa-fabook"></i>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <h6 class="font-weight-medium mb-0 nowrap">
                                                                        <a href="javascript:void(0)" class="link">
                                                                            @link.Name
                                                                        </a>
                                                                    </h6>
                                                                    <small class="text-muted no-wrap">
                                                                        @link.Url
                                                                    </small>
                                                                </td>

                                                            </tr>
                                                            break;
                                                        case LinkTypes.Reddit:
                                                            <tr @onclick="() => Utilities.OpenBrowser(link.Url)">
                                                                <td>
                                                                    <span class="round rounded-circle text-white d-inline-block text-center bg-info">
                                                                        <i class="fab fa-reddit"></i>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <h6 class="font-weight-medium mb-0 nowrap">
                                                                        <a href="javascript:void(0)" class="link">
                                                                            @link.Name
                                                                        </a>
                                                                    </h6>
                                                                    <small class="text-muted no-wrap">
                                                                        @link.Url
                                                                    </small>
                                                                </td>

                                                            </tr>
                                                            break;
                                                        case LinkTypes.Telegram:
                                                            <tr @onclick="() => Utilities.OpenBrowser(link.Url)">
                                                                <td>

                                                                    <span class="round rounded-circle text-white d-inline-block text-center bg-info">
                                                                        <i class="fab fa-telegram-plane"></i>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <h6 class="font-weight-medium mb-0 nowrap">
                                                                        <a href="javascript:void(0)" class="link">
                                                                            @link.Name
                                                                        </a>
                                                                    </h6>
                                                                    <small class="text-muted no-wrap">
                                                                        @link.Url
                                                                    </small>
                                                                </td>

                                                            </tr>
                                                            break;

                                                    }
                                                }
                                            }
                                         

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Circulating Supply</h4>
                                    <div class="text-end">
                                        <h2 class="fw-light mb-0"><i class="ti-arrow-up text-info"></i> @Utilities.TruncateDecimals(@Communication.SelectedContract.CirculatingSupply)</h2>
                                        <span class="text-muted">Based on LP -> 0x2345...5323</span>
                                    </div>
                                    <span class="text-info">@SupplyDifference.ToString("F1") %</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: @SupplyDifference%; height: 6px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="min-height: 399px;">
                            <div class="card" style="padding: 0;">
                                <div class="card-body" style="height: 390px; overflow: hidden; overflow-y: auto;">
                                    <div class="d-md-flex align-items-center">
                                        <div>
                                            <h4 class="card-title">Exchange listings</h4>
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table stylish-table no-wrap v-middle">
                
                                            <tbody>
                                            @if (Communication.SelectedToken.Links != null)
                                            {
                                                @foreach (var link in Communication.SelectedToken.Links.Where(x => x.Type == LinkTypes.Exchange).ToList())
                                                {
                                                    <tr @onclick="() => Utilities.OpenBrowser(link.Url)">
                                                        <td>

                                                            <span class="round rounded-circle text-white d-inline-block text-center bg-info">
                                                                <i class="fas fa-exchange-alt"></i>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <h6 class="font-weight-medium mb-0 nowrap">
                                                                <a href="javascript:void(0)" class="link">
                                                                    @link.Name
                                                                </a>
                                                            </h6>
                                                        </td>

                                                    </tr>
                                                }
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <PriceChangeComponent>
                            
                        </PriceChangeComponent>
                    </div>
            </div>
        </div>
    </div>
    <div class="row" style="padding: 12px;">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body">
                    <div class="d-md-flex no-block">
                        <div>
                            <h4 class="card-title">Sales Overview</h4>
                            <h6 class="card-subtitle">Check the monthly sales </h6>
                        </div>
                        <div class="ms-auto">
                            <select class="form-select">
                                <option selected="">March</option>
                                <option value="1">February</option>
                                <option value="2">May</option>
                                <option value="3">April</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-body bg-light">
                    <div class="row">
                        <div class="col-md-6">
                            <h2 class="mb-0">March 2021</h2>
                            <h5 class="fw-light mt-0 text-muted">Report for this month</h5></div>
                        <div class="col-md-6 align-self-center display-6 text-info text-start text-md-end">$3,690</div>
                    </div>
                </div>
                <TransactionsGridComponent Contract="@Communication.SelectedContract.ContractAddress" ></TransactionsGridComponent>
            </div>
        </div>
    </div>
    <div class="row" style="padding: 12px;">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <ul class="list-icons d-flex flex-item text-center list-style-none">
                           
                            <li class="col my-1"   @onclick="() => SocialFeedSelected(1)"  style="cursor: pointer;"> 
                                <span  data-bs-toggle="tooltip" data-bs-placement="top" title="" data-original-title="twitter" data-bs-original-title="social" aria-label="social"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter ps-2"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg></span>
                            </li>
                            <li class="col my-1"  @onclick="() => SocialFeedSelected(2)" style="cursor: pointer;">
                                <span data-bs-toggle="tooltip" data-bs-placement="top" title="" data-original-title="Facebook" data-bs-original-title="social" aria-label="social"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook ps-2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg></span>
                            </li>
                            <li class="col my-1" @onclick="() => SocialFeedSelected(3)" style="cursor: pointer;">
                                <span   data-bs-toggle="tooltip" data-bs-placement="top" title="" data-original-title="Youtube" data-bs-original-title="social" aria-label="social"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-youtube ps-2"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon></svg></span>
                            </li>
                           
                        </ul>
                    </div>
                    <div id="InstagramFeed" style='padding: 20px; height: 44vh; display: @InstagramVisible'>

                    </div>
                    <div  id="TwitterFeed" style='padding: 20px; height: 44vh; display: @TwitterVisible'>

                    </div>
                    <div id="YoutubeFeed"  style='padding: 20px; height: 44vh; display: @YoutubeVisible'>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<AdvertisementComponent>
    
</AdvertisementComponent>